{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "ra-spring-data-provider-v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true,
    "requireUpstream": true
  },
  "npm": {
    "publish": true,
    "publishArgs": ["--access", "public"]
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": ["git pull origin main"]
  }
}
